@model LoginViewModel
@{
    ViewData["Title"] = "Login"; 
}

<div class="bg-body-tertiary d-flex justify-content-center align-items-center vh-100">

    <form method="post" asp-action="Index" class="card col-11 col-lg-4 shadow" novalidate>
        <div class="card-body px-5 pt-5">
            
            <div class="col-12">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="mb-4">
                    <input asp-for="RememberMe" class="form-check-input me-2" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div class="d-grid mb-3">
                    <button class="btn btn-secondary py-2">SUBMIT</button>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <div class="my-3">
                    <div class="mb-3 text-center">Or login with</div>
                    <div class="d-flex justify-content-center">
                        <a class="link-login color-facebook" asp-action="Facebook"><i class="fa-brands fa-facebook-f"></i></a>
                        <a class="link-login color-google" asp-action="Google"><i class="fa-brands fa-google"></i></a>
                        <a class="link-login color-twitter" asp-action="Twitter"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
            </div>


        </div>
    </form>

</div>